<script>
	$(function () {
		/* ChartJS
		 * -------
		 * Here we will create a few charts using ChartJS
		 */

		

		//-------------
		//- PIE CHART -
		//-------------
		
		
		<%
			var data = [];
			var labels = [];
			for(p in countLevel){
				data.push(countLevel[p]);
				labels.push(p);
			}
		%>
		var data = <%- JSON.stringify(data) %>
		var labels = <%- JSON.stringify(labels) %>

		var ctx = document.getElementById("pieChartUsers");
		var d = {
			datasets: [{
				data: data,
				backgroundColor: [
					"#FF6384",
					"#4BC0C0",
					"#FFCE56",
					"#E7E9ED",
					"#36A2EB"
				],
				label: 'My dataset' // for legend
			}],
			labels: labels
		};
		var myChart = new Chart(ctx, {
			type: 'pie',
			data: d,
			options: {
				scales: {
					yAxes: [{
						ticks: {
							beginAtZero: true
						}
					}]
				}
			},
			animation:{
				animateScale:true
			}
		});

		<% 
			let levels = {
				'admin': {
					data: [],
					backgroundColor: "#FF6384",
					label: 'admin',
				},
				'manager': {
					data: [],
					backgroundColor: "#4BC0C0",
					label: 'manager'
				},
				'user': {
					data: [],
					backgroundColor: "#FFCE56",
					label: 'user'
				}
			};
			let datasets = []
			labels = []
			for(mdt in countMaDeTai){
				let dt = countMaDeTai[mdt];
				for(l in dt){
					levels[l].data.push(dt[l]);
					// levels[l].label.push(mdt);
				}
				labels.push(mdt);
			}
			for(let l in levels){
				datasets.push(levels[l]);
			}
			// console.log(levels);
			// console.log(datasets);
		%>

		data = <%- JSON.stringify(data) %>
		labels = <%- JSON.stringify(labels) %>
		var datasets = <%- JSON.stringify(datasets) %>

		ctx = document.getElementById("pieChartUsersMDT");
		var d = {
			datasets: datasets,
			labels: labels
		};
		var myChart = new Chart(ctx, {
			type: 'bar',
			// type: 'horizontalBar',
			data: d,
			options: {
				scales: {
					yAxes: [{
						ticks: {
							beginAtZero: true
						}
					}]
				}
			},
			animation:{
				animateScale:true
			}
		});
	});
