<script>
	function revokeManager(userId) {
		console.log('revoking ' + userId);
		$.ajax({
			url: '/admin/revoke/manager',
			method: 'POST',
			data: {
				userId: userId
			},
			success: function (data) {
				// console.log('success');
				// console.log(data);
				if (data.status == 'success'){
					alert('Cập nhật thành công. Trang sẽ tự reload sau 1s.')
				}
				setTimeout(function () {
					window.location.reload(true);
				}, 1000);
			},
			error: function (err) {
				// console.log('error');
				// console.log(err);
				alert(err.responseJSON.error)
			}
		})
	}

	function ob(x) {
		return document.getElementById(x)
	}

	function grantManager(userId) {
		var maDeTai = ob('maDeTai-' + userId).value.trim();
		if (!maDeTai){
			alert('Nhập mã đề tài trước');
			ob('maDeTai-' + userId).focus();
			return;
		}
		$.ajax({
			url: '/admin/grant/manager',
			method: 'POST',
			data: {
				userId: userId,
				maDeTai: maDeTai
			},
			success: function (data) {
				// console.log('success');
				// console.log(data);
				if (data.status == 'success'){
					alert('Cập nhật thành công. Trang sẽ tự reload sau 1s.')
				}
				setTimeout(function () {
					window.location.reload(true);
				}, 1000);
			},
			error: function (err) {
				// console.log('error');
				// console.log(err);
				alert(err.responseJSON.error)
			}
		})
	}

	function assignTo(userId) {
		var maDeTai = ob('maDeTai-' + userId).value.trim();
		if (!maDeTai){
			alert('Nhập mã đề tài trước');
			ob('maDeTai-' + userId).focus();
			return;
		}
		$.ajax({
			url: '/admin/assign/',
			method: 'POST',
			data: {
				userId: userId,
				maDeTai: maDeTai
			},
			success: function (data) {
				// console.log('success');
				// console.log(data);
				if (data.status == 'success'){
					alert('Cập nhật thành công. Trang sẽ tự reload sau 1s.')
				}
				setTimeout(function () {
					window.location.reload(true);
				}, 1000);
			},
			error: function (err) {
				// console.log('error');
				// console.log(err);
				alert(err.responseJSON.error)
			}
		})
	}

	function fire(userId) {
		
		$.ajax({
			url: '/admin/fire/',
			method: 'POST',
			data: {
				userId: userId
			},
			success: function (data) {
				// console.log('success');
				// console.log(data);
				if (data.status == 'success'){
					alert('Cập nhật thành công. Trang sẽ tự reload sau 1s.')
				}
				setTimeout(function () {
					window.location.reload(true);
				}, 1000);
			},
			error: function (err) {
				// console.log('error');
				// console.log(err);
				alert(err.responseJSON.error)
			}
		})
	}
</script>

