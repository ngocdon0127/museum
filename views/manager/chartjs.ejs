<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Thống kê mẫu vật</title>
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	<!-- Bootstrap 3.3.6 -->
	<link rel="stylesheet" href="/admin/bootstrap/css/bootstrap.min.css">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
	<!-- Ionicons -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="/admin/dist/css/AdminLTE.min.css">
	<!-- AdminLTE Skins. Choose a skin from the css/skins
			 folder instead of downloading all of them to reduce the load. -->
	<link rel="stylesheet" href="/admin/dist/css/skins/_all-skins.min.css">

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body class="hold-transition skin-green sidebar-mini">
<div class="wrapper">

	<header class="main-header">
		<% include ../alte-header %>
	</header>
	<!-- Left side column. contains the logo and sidebar -->
	<aside class="main-sidebar">
		<% include ../alte-left-sidebar %>
	</aside>

	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<h1>
				Thống kê mẫu vật theo đề tài
			</h1>
			<ol class="breadcrumb">
				<li><a href="/home"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
				<li><a href="/manager">Quản lý</a></li>
				<li class="#">Thống kê mẫu vật</li>
			</ol>
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="row">
				<% if (user.level == 'admin') { %>
					<!-- Chỉ admin mới xem được biểu đồ này -->
					<div class="col-md-6">
						<!-- DONUT CHART -->
						<div class="box box-success">
							<div class="box-header with-border">
								<h3 class="box-title">Tổng quan - Theo đề tài</h3>

								<div class="box-tools pull-right">
									<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
									</button>
									<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
								</div>
							</div>
							<div class="box-body">
								<canvas id="barChartFormsMDT" style="height:250px"></canvas>
							</div>
							<!-- /.box-body -->
						</div>

					</div>

					<!-- Chỉ admin mới xem được biểu đồ này -->
					<div class="col-md-6">
						<!-- DONUT CHART -->
						<div class="box box-success">
							<div class="box-header with-border">
								<h3 class="box-title">Tổng quan - Theo loại mẫu vật</h3>

								<div class="box-tools pull-right">
									<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
									</button>
									<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
								</div>
							</div>
							<div class="box-body">
								<canvas id="pieChartAll" style="height:250px"></canvas>
							</div>
							<!-- /.box-body -->
						</div>

					</div>
				<% } %>
				<!-- /.col (RIGHT) -->
				<div class="col-md-6">
					
					<% 
						var index = 0;
						for(p in dataForCharts){
							if (index % 2 == 0){
								%>
								<!-- DONUT CHART -->
								<div class="box box-success">
									<div class="box-header with-border">
										<h3 class="box-title"><%= p %></h3>

										<div class="box-tools pull-right">
											<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
											</button>
											<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
										</div>
									</div>
									<div class="box-body">
										<canvas id="pieChart<%= index %>" style="height:250px"></canvas>
									</div>
									<!-- /.box-body -->
								</div>
								<%
							}
							index++;
						}
					%>

				</div>
				<!-- /.col (LEFT) -->
				<div class="col-md-6">
					<% 
						index = 0;
						for(p in dataForCharts){
							if (index % 2 == 1){
								%>
								<!-- DONUT CHART -->
								<div class="box box-success">
									<div class="box-header with-border">
										<h3 class="box-title"><%= p %></h3>

										<div class="box-tools pull-right">
											<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
											</button>
											<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
										</div>
									</div>
									<div class="box-body">
										<canvas id="pieChart<%= index %>" style="height:250px"></canvas>
									</div>
									<!-- /.box-body -->
								</div>
								<%
							}
							index++;
						}
					%>

				</div>
				<!-- /.col (RIGHT) -->
			</div>
			<!-- /.row -->

		</section>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->
	<footer class="main-footer">
		
	</footer>

	
	<!-- /.control-sidebar -->
	<!-- Add the sidebar's background. This div must be placed
			 immediately after the control sidebar -->
	<div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- jQuery 2.2.3 -->
<script src="/admin/plugins/jQuery/jquery-2.2.3.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="/admin/bootstrap/js/bootstrap.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.min.js"></script>
<!-- FastClick -->
<script src="/admin/plugins/fastclick/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="/admin/dist/js/app.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script type="text/javascript" src="/javascripts/adminjs.js"></script>
<!-- page script -->
<script src='/javascripts/footer.js'></script>
<script>
	$(function () {
		/* ChartJS
		 * -------
		 * Here we will create a few charts using ChartJS
		 */

		

		//-------------
		//- PIE CHART -
		//-------------
		
		
		<%
			var data = [];
			var labels = [];
			var dataForBarCharts = [];
			var labelsForBarCharts = []
			for(p in dataForCharts){
				labelsForBarCharts.push(p);
				dataForBarCharts.push(dataForCharts[p].reduce((preValue, currentValue) => {
					return preValue + parseInt(currentValue.value);
				}, 0));

				var d = dataForCharts[p];
				var data_ = [];
				var label_ = [];
				d.map((d_, index) => {
					data_.push(d_.value);
					label_.push(d_.label);
				})
				data.push(data_);
				labels.push(label_);
			}
		%>
		var data = <%- JSON.stringify(data) %>
		var labels = <%- JSON.stringify(labels) %>
		<% if (user.level == 'admin') { %>
			var dataForBarCharts = []
			var labelsForBarCharts = []
			dataForBarCharts = <%- JSON.stringify(dataForBarCharts) %>
			labelsForBarCharts = <%- JSON.stringify(labelsForBarCharts) %>
			var ctx = document.getElementById('barChartFormsMDT');
			var myChart = new Chart(ctx, {
				type: 'bar',
				data: {
					"datasets": [
						{
							"data": dataForBarCharts,
							"backgroundColor": "#4BC0C0",
							"label": "Tổng số mẫu vật"
						}
					],
					"labels": labelsForBarCharts
				},
				options: {
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero: true
							}
						}]
					}
				},
				animation:{
					animateScale: true
				}
			})

			var dataForPieChart = []
			var labelForPieChart = labels[0]
			var dataForPieChart = []
			if (data.length > 0){
				dataForPieChart = JSON.parse(JSON.stringify(data[0]));
				for(var i = 1; i < data.length; i++){
					for(var j = 0; j < data[i].length; j++){
						dataForPieChart[j] += data[i][j];
					}
				}
			}

			ctx = document.getElementById("pieChartAll");
			var d = {
				datasets: [{
					data: dataForPieChart,
					backgroundColor: [
						"#FF6384",
						"#4BC0C0",
						"#FFCE56",
						"#E7E9ED",
						"#36A2EB"
					],
					label: 'My dataset' // for legend
				}],
				labels: labelForPieChart
			};
			var myChart = new Chart(ctx, {
				type: 'pie',
				data: d,
				options: {
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero: true
							}
						}]
					}
				},
				animation:{
					animateScale:true
				}
			});


		<% } %>

		for(var i = 0; i < data.length; i++){
			// console.log("pieChart" + i);
			// console.log(data[i]);
			// console.log(labels[i]);
			var ctx = document.getElementById("pieChart" + i);
			var d = {
				datasets: [{
					data: data[i],
					backgroundColor: [
						"#FF6384",
						"#4BC0C0",
						"#FFCE56",
						"#E7E9ED",
						"#36A2EB"
					],
					label: 'My dataset' // for legend
				}],
				labels: labels[i]
			};
			var myChart = new Chart(ctx, {
				type: 'pie',
				data: d,
				options: {
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero: true
							}
						}]
					}
				},
				animation:{
					animateScale:true
				}
			});
		}
	});
</script>
</body>
</html>
