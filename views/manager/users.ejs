<script>
	
	

	function ob(x) {
		return document.getElementById(x)
	}

	function assignTo(userId) {
		
		$.ajax({
			url: '/manager/assign/',
			method: 'POST',
			data: {
				userId: userId
			},
			success: function (data) {
				// console.log('success');
				// console.log(data);
				if (data.status == 'success'){
					alert('Cập nhật thành công. Trang sẽ tự reload sau 1s.')
				}
				setTimeout(function () {
					window.location.reload(true);
				}, 1000);
			},
			error: function (err) {
				// console.log('error');
				// console.log(err);
				alert(err.responseJSON.error)
			}
		})
	}

	function fire(userId) {
		
		$.ajax({
			url: '/manager/fire/',
			method: 'POST',
			data: {
				userId: userId
			},
			success: function (data) {
				// console.log('success');
				// console.log(data);
				if (data.status == 'success'){
					alert('Cập nhật thành công. Trang sẽ tự reload sau 1s.')
				}
				setTimeout(function () {
					window.location.reload(true);
				}, 1000);
			},
			error: function (err) {
				// console.log('error');
				// console.log(err);
				alert(err.responseJSON.error)
			}
		})
	}
</script>

