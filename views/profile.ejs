              <h3 class="profile-username text-center"><%= user.fullname %></h3>
              <%
                let obj = {
                  'admin': 'Admin',
                  'manager': 'Quản lý',
                  'user': 'Nhân viên',
                  'pending-user': 'Nhân viên'
                }
              %>
              <p class="text-muted text-center"><%= obj[user.level] %></p>
              <br>
              <strong><i class="fa fa-book margin-r-5"></i> Đề tài</strong>

              <p class="text-muted">
                <%= user.deTai %>
